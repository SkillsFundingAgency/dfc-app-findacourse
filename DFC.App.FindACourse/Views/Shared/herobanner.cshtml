
<form action="/find-a-course/course/searchcourse" method="get">
<section id="fac-search-banner" class="primary-hero">
    <div class="govuk-width-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">Find a course</h1>
                <p class="govuk-body-lead">Use our course search to look for different types of learning opportunities.</p>
                <label class="input-label" id="input-label" for="search-input">Enter a keyword</label>
                <div class="input-wrapper">
                    <input type="search" aria-label="SearchTerm" id="search-input" name="searchTerm" title="Search" class="govuk-input input-search-item input-search js-search-focus">
                    <div class="input-search-item input-submit-wrapper">
                        <button data-module="govuk-button" type="submit" aria-label="Search" class="input-search-submit">Search</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
</form>
