@model Course

<div class="govuk-!-margin-top-6">
    <h2 class="govuk-heading-m">
        <a class="govuk-link" href="/find-a-course/course/details?courseId=@Model.CourseId&runId=@Model.RunId">@Model.Title</a>
    </h2>
    <p>@Model.Description</p>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-half">
            <ul class="govuk-list">
                <li>
                    <span class="govuk-secondary-colour">Start date:</span>
                    @if (Model.StartDate != null)
                    {
                        <span>@Model.StartDate.Value.ToLongDateString()</span>
                    }
                </li>
                <li>
                    <span class="govuk-secondary-colour">Cost:</span>
                    @if (!string.IsNullOrEmpty(Model.Cost))
                    {
                        <span>£@Model.Cost</span>
                    }
                    <details data-module="govuk-details" class="course-cost-desc">
                        <summary class="govuk-details__summary">
                            <span class="govuk-details__summary-text">
                                View cost description
                            </span>
                        </summary>
                        <div class="govuk-details__text">@Model.CostDescription</div>
                    </details>
                </li>
                <li>
                    <span class="govuk-secondary-colour">Provider:</span> @Model.ProviderName
                </li>

            </ul>
        </div>
        <div class="govuk-grid-column-one-half">
            <ul class="govuk-list">
                <li>
                    <span class="govuk-secondary-colour">Course type:</span> @Model.AttendanceMode
                </li>
                <li>
                    <span class="govuk-secondary-colour">Duration:</span> @Model.Duration
                </li>
                <li>
                    <span class="govuk-secondary-colour">Location:</span> @Model.Location
                    @if (Model.AttendanceMode == "Work based" && Model.National == true)
                    {
                        <span>National</span>
                    }
                    else
                    {
                        <span>@Model.Region</span>
                    }
                    @if (Model.LocationDetails.Distance > 0)
                    {
                        <span>(@Model.LocationDetails.Distance)</span>;
                    }
                </li>

            </ul>
        </div>

    </div>
</div>