@model BodyViewModel
@{
    var brandingAssetsCdn = Model.CourseSearchSettings.BrandingAssetsCdn;
    var cdnLocation = brandingAssetsCdn + "/nationalcareers_toolkit";
}

<section aria-label="Search">
    <partial name="_herobanner.cshtml" model="Model" />
</section>

<div class="govuk-width-container margin-fix">
    <main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing govuk-body govuk-!-padding-top-0" id="main-content" role="main">
        <div class="govuk-width-container">
            <div class="fac-main-wrapper">
                <div id="home-block" style="display:block">
                    <div class="govuk-grid-row">
                    <div class="govuk-grid-column-full"></div>
                    <div class="govuk-grid-column-one-third">
                        <div class="fac-feature-box fac-feature-box__image fac-feature-box__card">
                            <div class="fac-feature-box__content">
                                <img src="@cdnLocation/images/courses-to-get-a-job.jpg" alt="">
                                <h2 class="govuk-heading-m">
                                   View all courses
                                </h2>
                                <p class="govuk-body">
                                    Browse available courses to find the one that's right for you.
                                </p>
                                    <a href="@(Model.FreeCourseSearch ? "/find-a-course/searchFreeCourse" : "/find-a-course/searchcourse")" class="govuk-button ncs-button__primary govuk-!-margin-bottom-1">Show all courses</a>
                            </div>
                        </div>
                    </div>
                    <div class="govuk-grid-column-one-third">
                        <div class="fac-feature-box fac-feature-box__image fac-feature-box__card">
                            <div class="fac-feature-box__content">
                                <img src="@cdnLocation/images/skills-toolkit-lifestyle.jpg" alt="">
                                <h2 class="govuk-heading-m">
                                   Improve your skills
                                </h2>
                                <p class="govuk-body">
                                        Learn new skills for free at your own pace.
                                </p>
                                    <a href="/find-a-course/the-skills-toolkit" class="govuk-button ncs-button__primary govuk-!-margin-bottom-1">Go to the Skills Toolkit</a>
                            </div>
                        </div>
                    </div>
                    <div class="govuk-grid-column-one-third">
                        <div class="fac-feature-box fac-feature-box__image fac-feature-box__card">
                            <div class="fac-feature-box__content">
                                <img src="@cdnLocation/images/help-with-choices-fac-homepage.jpg" alt="">
                                <h2 class="govuk-heading-m">
                                    Help with choices
                                </h2>
                                <p class="govuk-body">
                                        View advice and support to find a course that's right for you.
                                </p>
                                    <a href="/find-a-course/help-with-choices" class="govuk-button ncs-button__primary govuk-!-margin-bottom-1"> Get help with choices</a>
                            </div>
                        </div>
                    </div>
                        <div class="govuk-grid-column-one-third">
                            <div class="fac-feature-box fac-feature-box__image fac-feature-box__card">
                                <div class="fac-feature-box__content">
                                    <img src="@cdnLocation/images/find-an-apprenticeship.jpg" alt="">
                                    <h2 class="govuk-heading-m">
                                        Become an apprentice
                                    </h2>
                                    <p class="govuk-body">
                                        Search apprenticeships in England based on your interests and location.
                                    </p>
                                    <a href="https://www.gov.uk/apply-apprenticeship" class="govuk-button ncs-button__primary govuk-!-margin-bottom-1"> Find an apprenticeship</a>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
           </div>
        </div>
    </main>
</div>
