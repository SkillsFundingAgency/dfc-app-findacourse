@using DFC.App.FindACourse.Controllers
@model BodyViewModel

<form action="@(Model.FreeCourseSearch ? "/find-a-course/searchFreeCourse" : "/find-a-course/searchcourse")" method="get" id="fac-search-course-form" class="find-a-course-page">
    <section id="fac-search-banner" class="primary-hero">
        <div class="govuk-width-container">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">
                    @if (Model.FreeCourseSearch)
                    {
                        <h1 class="govuk-!-margin-bottom-2 govuk-heading-xl">Find free courses for jobs</h1>
                        <p class="govuk-body-l">Search for free courses to help you get skills employers need.</p>
                    }
                    else
                    {
                        <h1 class="govuk-!-margin-bottom-2 govuk-heading-xl">Find a course</h1>
                        <p class="govuk-body-l">Search for online and classroom courses near you, to help you get a job or develop your skills.</p>
                    }
                </div>
            </div>
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-third">
                    <div class="govuk-form-group">
                        <label class="govuk-label" for="location-input">Town, city or postcode</label>
                        <div class="input-wrapper">
                            <input type="search" aria-label="Enter Town, city or postcode" name="townOrPostcode" class="govuk-input govuk-!-width-full" id="location-input" value="@Model.SideBar.TownOrPostcode" autocomplete="off" />
                        </div>
                        <span class="fac-visually-hidden" aria-hidden="true">
                            <input type="hidden" asp-for="SideBar.Coordinates" name="sideBarCoordinates" id="coordinates" value="@Model.SideBar.Coordinates" />
                            <input type="hidden" asp-for="SideBar.SuggestedLocation" name="sideBarSuggestedLocation" id="suggestedLocation-input" value="@Model.SideBar.SuggestedLocation" />
                        </span>
                    </div>
                </div>
                <div class="govuk-grid-column-two-thirds">
                    <div class="govuk-form-group">
                        <label class="govuk-label" id="enter-keyword-label" for="search-input">Course or keyword</label>
                        <div class="input-wrapper">
                            <input type="search" id="search-input" name="searchTerm" value="@Model.CurrentSearchTerm" aria-label="Enter a keyword" title="Enter a keyword" class="govuk-input govuk-!-width-full" autocomplete="off">
                            <div class="input-search-item input-submit-wrapper">
                                <button data-module="govuk-button ncs-button__primary" type="submit" class="input-search-submit" id="search-button">Search</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>